{
    "compilerOptions": {
      "lib": ["dom", "ES2024"],
      "target": "ES2024",
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist/esm",
      "strict": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/*.*"]
  }
